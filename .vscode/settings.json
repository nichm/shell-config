{
  // =============================================================================
  // VS Code Workspace Settings for Bash Development
  // =============================================================================
  // Optimized for shell-config project with TypeScript developers in mind
  // =============================================================================

  // -----------------------------------------------------------------------------
  // ShellCheck Integration (ESLint equivalent for bash)
  // -----------------------------------------------------------------------------
  "shellcheck.enable": true,
  "shellcheck.run": "onType",
  "shellcheck.arguments": [
    "--severity=warning",
    "--shell=bash"
  ],
  "shellcheck.ignorePatterns": {
    "**/*.zsh": true,
    "**/node_modules/**": true
  },
  "shellcheck.customArgs": [
    "-e SC1091", // Not following sources (safe in this project)
    "-e SC2034", // Unused variables (false positives in sourced files)
    "-e SC2155"  // Declare and assign separately (project style choice)
  ],

  // -----------------------------------------------------------------------------
  // Shell Script Editor Settings
  // -----------------------------------------------------------------------------
  "[shellscript]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },

  // -----------------------------------------------------------------------------
  // bash-language-server (TypeScript Language Server equivalent)
  // -----------------------------------------------------------------------------
  "bashIde.explainshellServer": "https://explainshell.com",
  "bashIde.globPattern": "**/*@(.sh|.inc|.bash|.command|.zsh)",
  "bashIde.includeAllWorkspaceSymbols": true,
  "bashIde.backgroundAnalysisMaxFiles": 500,

  // Environment variables for bash-language-server
  "bashIde.envFile": "${workspaceFolder}/.env",

  // -----------------------------------------------------------------------------
  // General Editor Settings
  // -----------------------------------------------------------------------------
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.rulers": [80, 100],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.endOfLine": "lf",

  // -----------------------------------------------------------------------------
  // File Associations
  // -----------------------------------------------------------------------------
  "files.associations": {
    "*.bats": "shellscript",
    "lib/bin/*": "shellscript",
    "*.zsh": "shellscript"
  },

  // -----------------------------------------------------------------------------
  // GitHub Actions Support
  // -----------------------------------------------------------------------------
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // YAML schema for GitHub Actions
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow": ".github/workflows/*.{yml,yaml}"
  },

  // -----------------------------------------------------------------------------
  // Extensions Recommendations (shown when opening workspace)
  // -----------------------------------------------------------------------------
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": false,

  // -----------------------------------------------------------------------------
  // Search and Exclude Patterns
  // -----------------------------------------------------------------------------
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/dist": true,
    "**/build": true
  },

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.pyc": true
  },

  // -----------------------------------------------------------------------------
  // Testing Support
  // -----------------------------------------------------------------------------
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },

  // -----------------------------------------------------------------------------
  // Problem Matcher Patterns
  // -----------------------------------------------------------------------------
  "problems.patterns": [
    {
      "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
      "file": 1,
      "line": 2,
      "column": 3,
      "severity": 4,
      "message": 5
    }
  ]
}
